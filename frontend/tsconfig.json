{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src", "backend/src/routes/contactRoutes.js", "backend/src/routes/courseRoutes.js", "backend/src/routes/discountRoutes.js", "backend/src/routes/registrationRoutes.js", "backend/src/middleware", "backend/src/routes/authRoutes.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}